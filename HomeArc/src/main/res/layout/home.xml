<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity继承，抽取公共部分"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手势识别"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dagger2"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义火萤分享框容器"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kotlin模块"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Live Data"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ViewPager+Fragment懒加载"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alpa0 Activity"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/bt9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kotlin Study"
                android:textAllCaps="false" />

           <com.hyman.home.custom.RoundRectImageView
               android:layout_margin="20dp"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:background="@color/black">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我是"
                   android:textColor="@color/colorAccent"/>
           </com.hyman.home.custom.RoundRectImageView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>